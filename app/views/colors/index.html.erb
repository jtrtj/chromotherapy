
  <% if current_user.admin? %>
  <div class="hero">
    <div class="hero-body">
      <%= link_to  "add color to database", new_user_color_path(current_user) %>
    </div>
  </div>
  <%end%>
  <div class="container">
      <div class="columns is-multiline">
        <% @colors.each do |color| %>
          <%= link_to color_path(color) do %>
          <div class="column" id="color-<%= color.id %>"=>
            <style>
            #color-<%= color.id %> {background-color: <%= color.hex_value %>;
                                    height: 300px;
                                    width: 300px;}
            </style>
            <p class="title has-text-white has-text-centered"><%= color.name %></p>
          </div>
          <% end %>
     <% end %>
      </div>
  </div>





