
  <div class="container">
      <div class="columns is-multiline">
        <% @colors.each do |color| %>
          <%= link_to color_path(color) do %>
          <div class="column" id="color-<%= color.id %>"=>
            <style>
            #color-<%= color.id %> {background-color: <%= color.hex_value %>;
                                    height: 400px;
                                    width: 400px;}
            </style>
            <p class="title has-text-white has-text-centered"><%= color.name %></p>
          </div>
          <% end %>
     <% end %>
      </div>
  </div>





