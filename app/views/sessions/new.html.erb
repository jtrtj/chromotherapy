<style>
#grad {
  background: linear-gradient(to bottom right, <%= @two_colors[0].hex_value %>, <%= @two_colors[1].hex_value %>);
}
</style>

<section id="grad" class="hero is-white is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-4 is-offset-4">
                    <div class="box">
                        <%= form_tag login_path do %>
                            <div class="field">
                                <div class="control">
                                  <%= label_tag :email %>
                                  <%= text_field_tag :email, "", class: "input is-large" %>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                  <%= label_tag :password %>
                                  <%= password_field_tag :password, "", class: "input is-large" %>
                                </div>
                            </div>
                            <div id="log-in-button"><%= submit_tag 'log in', class: "button is-block is-info is-large is-fullwidth" %></div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </section>
<script async type="text/javascript" src="../js/bulma.js"></script>